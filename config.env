# 比赛代码查重插件配置

## 相似度阈值配置
SIMILARITY_THRESHOLD=0.6          # 判定为相似的最低阈值（0-1）
HIGH_SIMILARITY_THRESHOLD=0.8     # 高相似度阈值，需要重点关注
SEGMENT_SIMILARITY_THRESHOLD=0.7  # 代码片段相似度阈值

## 代码分析参数
CODE_SEGMENT_WINDOW_SIZE=5        # 代码片段分析窗口大小（行数）
MIN_CODE_LENGTH=10                # 参与查重的最小代码长度（字符数）

## 分页配置
REPORTS_PER_PAGE=20               # 每页显示的报告数量
PROBLEMS_PER_PAGE=50              # 每页显示的题目数量

## 性能配置
ASYNC_PROCESSING=true             # 是否异步处理查重任务
MAX_PARALLEL_COMPARISONS=100     # 最大并发比较数量

## 语言映射配置
# 支持的编程语言及其识别规则
LANGUAGE_MAPPING={
  "c": ["cc", "c.", "gcc"],
  "cpp": ["cpp", "cc17", "cxx", "cc17o2", "g++"],
  "python": ["py", "python3", "python"],
  "java": ["java", "java8", "java11"]
}

## 界面配置
SHOW_USER_NAMES=true              # 是否在结果中显示用户名
HIGHLIGHT_HIGH_SIMILARITY=true    # 是否高亮显示高相似度结果
ENABLE_CODE_PREVIEW=true          # 是否启用代码预览功能

## 权限配置
REQUIRED_PRIVILEGE="PRIV_EDIT_SYSTEM"  # 访问查重功能所需权限

## 缓存配置
ENABLE_RESULT_CACHE=true          # 是否启用结果缓存
CACHE_DURATION_HOURS=24           # 缓存保留时间（小时）

## 日志配置
LOG_LEVEL="INFO"                  # 日志级别：DEBUG, INFO, WARN, ERROR
LOG_DETAILED_COMPARISON=false     # 是否记录详细的比较过程

## 数据库配置
COLLECTION_NAME="plagiarism_reports"  # 查重报告集合名称
INDEX_FIELDS=["contestId", "createdAt", "status"]  # 需要创建索引的字段
